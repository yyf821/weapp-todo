/* pages/todo/todo.wxss */
/* 提交按钮 */
.btn-submit {
  margin: 10px 0;
}

.btn-submit:not([size='mini']) {
  width: 100%;
}

/* 输入框 */
input {
  border: 1px solid #d6d6d6;
  padding: 12px 20px;
}

/* 分割线 */
.line {
  width: 100%;
  height: 2rpx;
  background: #333;
  margin-top: 2rpx;
}

/* 分割标题 */
.todo-title {
  color: #333;
}